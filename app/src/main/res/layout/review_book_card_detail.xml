<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/book_cover_relative"
            android:layout_width="150dp"
            android:layout_height="210dp">

            <ImageView
                android:id="@+id/review_detail_book_cover"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:layout_height="210dp" />

            <TextView
                android:id="@+id/main_view_category"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:textSize="15sp"
                android:padding="5dp"
                android:ellipsize="end"
                android:textColor="#fff"
                android:background="#99000000"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/main_view_title"
            android:layout_toEndOf="@+id/book_cover_relative"
            android:layout_toRightOf="@+id/book_cover_relative"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_view_author"
            android:layout_toEndOf="@+id/book_cover_relative"
            android:layout_toRightOf="@+id/book_cover_relative"
            android:layout_below="@+id/main_view_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_view_publisher"
            android:layout_toEndOf="@+id/book_cover_relative"
            android:layout_toRightOf="@+id/book_cover_relative"
            android:layout_below="@+id/main_view_author"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>